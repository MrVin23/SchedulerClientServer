@page "/test-authorization"
@layout StoryLayout
@using Microsoft.AspNetCore.Components.WebAssembly.Http
@using Client.Enums

<PageTitle>Authorization Test Page</PageTitle>

<div class="container-lg py-4">
    @* Header Section *@
    <div class="card mb-4" style="background: linear-gradient(135deg, #1a237e 0%, #0d47a1 100%); border-radius: 12px;">
        <div class="card-body text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">
                        <i class="bi bi-shield-lock me-2"></i>
                        Authorization Test Page
                    </h4>
                    <small class="opacity-75">
                        This page has NO authorization restrictions. Test if server endpoints properly enforce security.
                    </small>
                </div>
                <span class="badge bg-warning text-dark">No Auth Required</span>
            </div>
        </div>
    </div>

    @* Info Alert *@
    <div class="alert alert-info mb-4">
        <strong>Purpose:</strong> This page allows you to test authorization endpoints without being logged in. 
        Successful access when not authenticated indicates a security issue. Expected behavior: 401 (Unauthorized) or 403 (Forbidden).
    </div>

    <div class="row g-3">
        @* Authentication Status Card *@
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-person text-primary me-2"></i>
                        Authentication Status
                    </h6>
                    <hr />
                    
                    @if (_isCheckingAuth)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                            <small class="d-block mt-2 text-muted">Checking authentication...</small>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <span class="me-2">Status:</span>
                            @if (_isAuthenticated)
                            {
                                <span class="badge bg-success">Authenticated</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Authenticated</span>
                            }
                        </div>
                        
                        @if (_isAuthenticated)
                        {
                            <p class="small mb-1"><strong>User:</strong> @_username</p>
                            <p class="small mb-1"><strong>Email:</strong> @_email</p>
                            <p class="small mb-0"><strong>User ID:</strong> @_userId</p>
                        }
                    }
                    
                    <button class="btn btn-outline-primary w-100 mt-3" @onclick="CheckAuthenticationStatus" disabled="@_isCheckingAuth">
                        <i class="bi bi-arrow-clockwise me-1"></i>Refresh Status
                    </button>
                </div>
            </div>
        </div>

        @* Quick Actions Card *@
        <div class="col-12 col-md-8">
            <div class="card h-100">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-play text-secondary me-2"></i>
                        Quick Actions
                    </h6>
                    <hr />
                    
                    <div class="row g-2">
                        <div class="col-12 col-sm-4">
                            <button class="btn btn-primary w-100" @onclick="RunAllTests" disabled="@_isRunningAllTests">
                                @if (_isRunningAllTests)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Running...</span>
                                }
                                else
                                {
                                    <i class="bi bi-play-circle me-1"></i>
                                    <span>Run All Tests</span>
                                }
                            </button>
                        </div>
                        <div class="col-12 col-sm-4">
                            <button class="btn btn-outline-warning w-100" @onclick="ClearResults">
                                <i class="bi bi-x-circle me-1"></i>Clear Results
                            </button>
                        </div>
                        <div class="col-12 col-sm-4">
                            <button class="btn btn-outline-info w-100" @onclick="@(() => Navigation.NavigateTo("/login"))">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Go to Login
                            </button>
                        </div>
                    </div>

                    @if (_testResults.Any())
                    {
                        <hr />
                        <div class="d-flex justify-content-between align-items-center">
                            <span>
                                <strong>Summary:</strong> 
                                <span class="badge bg-success mx-1">@_testResults.Count(r => r.Success) Passed</span>
                                <span class="badge bg-danger mx-1">@_testResults.Count(r => !r.Success) Failed</span>
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Policy-Based Endpoints Card *@
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-shield-check text-danger me-2"></i>
                        Policy-Based Endpoints
                    </h6>
                    <small class="text-muted d-block mb-3">These endpoints require specific permissions assigned to roles</small>
                    <hr />
                    
                    @foreach (var endpoint in _policyEndpoints)
                    {
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <strong>@endpoint.Name</strong>
                                <small class="d-block text-muted">@endpoint.Description</small>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                @if (endpoint.Result.HasValue)
                                {
                                    <span class="badge @(endpoint.Result.Value ? "bg-success" : "bg-danger")">
                                        @(endpoint.Result.Value ? "✓ Access" : $"✗ {endpoint.StatusCode}")
                                    </span>
                                }
                                <button class="btn btn-sm btn-outline-primary" @onclick="@(() => TestEndpoint(endpoint))" disabled="@endpoint.IsTesting">
                                    @if (endpoint.IsTesting)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    else
                                    {
                                        <span>Test</span>
                                    }
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Permission Endpoints Card *@
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-key text-warning me-2"></i>
                        Direct Permission Tests
                    </h6>
                    <small class="text-muted d-block mb-3">Test specific permissions via dynamic endpoint</small>
                    <hr />
                    
                    @foreach (var endpoint in _permissionEndpoints)
                    {
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <strong>@endpoint.Name</strong>
                                <small class="d-block text-muted">@endpoint.Description</small>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                @if (endpoint.Result.HasValue)
                                {
                                    <span class="badge @(endpoint.Result.Value ? "bg-success" : "bg-danger")">
                                        @(endpoint.Result.Value ? "✓ Has Permission" : $"✗ {endpoint.StatusCode}")
                                    </span>
                                }
                                <button class="btn btn-sm btn-outline-primary" @onclick="@(() => TestEndpoint(endpoint))" disabled="@endpoint.IsTesting">
                                    @if (endpoint.IsTesting)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    else
                                    {
                                        <span>Test</span>
                                    }
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Custom Endpoint Test *@
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-hdd-network text-info me-2"></i>
                        Custom Endpoint Test
                    </h6>
                    <hr />
                    
                    <div class="row g-2 align-items-end">
                        <div class="col-12 col-md-6">
                            <label class="form-label">API Endpoint</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-link"></i></span>
                                <input type="text" class="form-control" @bind="_customEndpoint" placeholder="api/test/admin" />
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label">Method</label>
                            <select class="form-select" @bind="_customMethod">
                                <option value="GET">GET</option>
                                <option value="POST">POST</option>
                                <option value="PUT">PUT</option>
                                <option value="DELETE">DELETE</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-3">
                            <button class="btn btn-primary w-100" style="height: 38px;" 
                                    @onclick="TestCustomEndpoint" 
                                    disabled="@(_isTestingCustom || string.IsNullOrWhiteSpace(_customEndpoint))">
                                @if (_isTestingCustom)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Test Endpoint
                            </button>
                        </div>
                    </div>

                    @if (_customResult != null)
                    {
                        <div class="alert @(_customResult.Success ? "alert-success" : "alert-danger") mt-3 mb-0">
                            <strong>@_customMethod @_customEndpoint</strong> - 
                            Status: @_customResult.StatusCode | 
                            @(_customResult.Success ? "Access Granted" : "Access Denied")
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Test Results Table *@
        @if (_testResults.Any())
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="bi bi-table text-success me-2"></i>
                            Test Results Log
                        </h6>
                        <hr />
                        
                        <div class="table-responsive">
                            <table class="table table-sm table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>Endpoint</th>
                                        <th>Method</th>
                                        <th>Status Code</th>
                                        <th>Result</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in _testResults.OrderByDescending(r => r.Timestamp))
                                    {
                                        <tr>
                                            <td>@result.Timestamp.ToString("HH:mm:ss")</td>
                                            <td><code>@result.Endpoint</code></td>
                                            <td>@result.Method</td>
                                            <td>
                                                <span class="badge @GetStatusColorClass(result.StatusCode)">@result.StatusCode</span>
                                            </td>
                                            <td>
                                                @if (result.Success)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                            <td>@result.Message</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
