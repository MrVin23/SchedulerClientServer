@page "/test-permission-access"
@layout StoryLayout
@using Client.Interfaces.Authorisation
@using Client.Interfaces
@using Client.Enums

<PageTitle>Test Permission Access</PageTitle>

<div class="container py-4" style="max-width: 800px;">
    <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
            <i class="bi bi-key text-secondary fs-1"></i>
            <h4 class="mt-3">Test Permission Access</h4>
            <p class="text-muted mb-0">Test dynamic permission-based authorization</p>
        </div>
    </div>

    @* Authentication Status Card *@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h6 class="card-title">
                <i class="bi bi-person-check text-info me-2"></i>
                Authentication Status
            </h6>
            
            @if (_isLoading)
            {
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"></div>
                </div>
            }
            else if (_isAuthenticated)
            {
                <div class="alert alert-success mb-3">
                    <i class="bi bi-check-circle me-2"></i>
                    Authenticated as: <strong>@_username</strong>
                </div>
                <div class="row">
                    <div class="col-6"><strong>User ID:</strong> @_userId</div>
                    <div class="col-6"><strong>Email:</strong> @_email</div>
                </div>
            }
            else
            {
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Not Authenticated
                </div>
                <button class="btn btn-primary" @onclick="NavigateToLogin">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Go to Login
                </button>
            }
        </div>
    </div>

    @* Permission Tests *@
    @if (_isAuthenticated)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-flask text-secondary me-2"></i>
                    Test Custom Permission
                </h6>
                
                <p class="small text-muted mb-3">
                    Enter any permission name to test if your user has access through any of their assigned roles.
                </p>

                <div class="row g-2 mb-3">
                    <div class="col-12 col-sm-8">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input type="text" class="form-control" @bind="_customPermission" 
                                   placeholder="e.g., Admin, Viewer, ActiveUser, CanEditPosts" />
                        </div>
                        <small class="text-muted">Enter the exact permission name from the database</small>
                    </div>
                    <div class="col-12 col-sm-4">
                        <button class="btn btn-primary w-100" @onclick="TestCustomPermission"
                                disabled="@(string.IsNullOrWhiteSpace(_customPermission) || _testingCustom)">
                            @if (_testingCustom)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-play me-1"></i>Test Permission
                        </button>
                    </div>
                </div>

                @if (_customPermissionResult != null)
                {
                    <div class="alert @(_customPermissionResult.Value ? "alert-success" : "alert-warning")">
                        @if (_customPermissionResult.Value)
                        {
                            <i class="bi bi-check-circle me-2"></i>
                            <text>You have the "<strong>@_testedPermission</strong>" permission!</text>
                        }
                        else
                        {
                            <i class="bi bi-x-circle me-2"></i>
                            <text>You do NOT have the "<strong>@_testedPermission</strong>" permission.</text>
                        }
                    </div>
                }
            </div>
        </div>

        @* Predefined Permission Tests *@
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-list-check text-info me-2"></i>
                    Quick Permission Tests
                </h6>
                
                <p class="small text-muted mb-3">Test common permissions defined in your system:</p>

                @foreach (var permission in _predefinedPermissions)
                {
                    <div class="card mb-2">
                        <div class="card-body py-2">
                            <div class="row align-items-center">
                                <div class="col-12 col-sm-5">
                                    <strong>@permission.Name</strong>
                                    <small class="d-block text-muted">@permission.Description</small>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <button class="btn btn-sm @GetButtonClass(permission.ColorName) w-100" 
                                            @onclick="@(() => TestPredefinedPermission(permission.Name))"
                                            disabled="@permission.IsTesting">
                                        @if (permission.IsTesting)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        Test @permission.Name
                                    </button>
                                </div>
                                <div class="col-12 col-sm-3 text-center">
                                    @if (permission.Result != null)
                                    {
                                        <span class="badge @(permission.Result.Value ? "bg-success" : "bg-danger")">
                                            @(permission.Result.Value ? "✓ Has Permission" : "✗ No Permission")
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <button class="btn btn-outline-primary w-100 mt-3" @onclick="TestAllPermissions">
                    <i class="bi bi-play me-1"></i>Test All Permissions
                </button>
            </div>
        </div>

        @* Results Summary *@
        @if (_lastTestMessage != null)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-clipboard-check text-warning me-2"></i>
                        Test Results
                    </h6>
                    <div class="alert @GetAlertClass(_lastTestSeverity) mb-3">
                        @_lastTestMessage
                    </div>
                    
                    @if (_permissionDetails != null && _permissionDetails.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Permission</th>
                                        <th>Has Access</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in _permissionDetails)
                                    {
                                        <tr>
                                            <td><strong>@detail.Permission</strong></td>
                                            <td>
                                                @if (detail.HasAccess)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                            <td>@detail.Message</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
