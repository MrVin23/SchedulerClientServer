@page "/home"
@using Client.Dtos

<PageTitle>Home</PageTitle>

<div class="container mt-4" style="max-width: 800px;">
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading user data...</p>
        </div>
    }
    else if (isVerifying)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Verifying authentication...</p>
        </div>
    }
    else if (currentUser == null)
    {
        <div class="alert alert-warning mb-4">
            No user information found. Please <a href="/login" class="alert-link">login</a> to continue.
        </div>
    }
    else
    {
        <h4 class="mb-4">Welcome, @currentUser.FirstName @currentUser.LastName!</h4>
        
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h6 class="card-title mb-3">User Information</h6>
                
                <div class="row">
                    <div class="col-12 col-sm-6 mb-3">
                        <small class="text-muted d-block">Username:</small>
                        <span>@currentUser.Username</span>
                    </div>
                    
                    <div class="col-12 col-sm-6 mb-3">
                        <small class="text-muted d-block">Email:</small>
                        <span>@currentUser.Email</span>
                    </div>
                    
                    <div class="col-12 col-sm-6 mb-3">
                        <small class="text-muted d-block">User ID:</small>
                        <span>@currentUser.Id</span>
                    </div>
                    
                    <div class="col-12 mb-3">
                        <small class="text-muted d-block mb-2">Roles:</small>
                        @if (currentUser.Roles != null && currentUser.Roles.Any())
                        {
                            @foreach (var role in currentUser.Roles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <button class="btn btn-danger" @onclick="HandleLogout">
            <i class="bi bi-box-arrow-right me-1"></i>
            Logout
        </button>
    }
</div>
