@page "/not-authorised"
@layout StoryLayout
@using MudBlazor

<PageTitle>Not Authorised</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-8">
        <MudStack AlignItems="AlignItems.Center" Spacing="4">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Error" Style="font-size: 64px;" />
            
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Not Authorised</MudText>
            
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-4">
                You do not have permission to access this resource.
            </MudText>
            
            <MudButton Variant="Variant.Filled"
                      Color="Color.Primary"
                      StartIcon="@Icons.Material.Filled.Login"
                      OnClick="NavigateToLogin"
                      Size="Size.Large">
                Go to Login
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>