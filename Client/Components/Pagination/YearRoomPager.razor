@using Client.Components.CustomSelect
@using Client.Components.CustomButton

@* Html markup for the year room pager *@
<div class="YearRoomPager">
    @* Dropdown selection section *@
    <div class="FilterSelection">
        <div class="DropdownSelectors">
            <CustomSelect TItem="string"
                          Label="Year"
                          Items="@MockYears"
                          @bind-SelectedValue="SelectedYear"
                          SelectType="CustomSelectType.Pager"
                          Placeholder="" />
            <CustomSelect TItem="string"
                          Label="Room"
                          Items="@MockRooms"
                          @bind-SelectedValue="SelectedRoom"
                          SelectType="CustomSelectType.Pager"
                          Placeholder="" />
        </div>
        <CustomButton Text="Select" 
                      ButtonType="CustomButtonType.Pager" 
                      Width="100%" />
    </div>
    @* Paging controls section *@
    <div class="paging-controls">
        <button class="paging-chevron" @onclick="OnPreviousClicked" title="Previous">
            <i class="bi bi-chevron-left"></i>
        </button>
        <div class="paging-title">
            <span>@SelectedYear</span>
            <span>@SelectedRoom</span>
        </div>
        <button class="paging-chevron" @onclick="OnNextClicked" title="Next">
            <i class="bi bi-chevron-right"></i>
        </button>
    </div>
    @* Details section *@
    <div class="details">
        <div class="detail-row">
            <span class="detail-label">Teacher:</span>
            <span class="detail-value">@TeacherName</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Updated:</span>
            <span class="detail-value">@LastUpdated.ToString("dd MMM yyyy")</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Total Number of Rooms:</span>
            <span class="detail-value">@TotalRooms</span>
        </div>
    </div>
</div>
@* Styling *@
<style>
    /* ================================
       Container
       ================================ */
    .YearRoomPager {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1rem;
        margin: 0.5rem;
        border-radius: var(--app-radius-md, 12px);
        display: flex;
        align-items: center;
        color: #ffffff;
        flex-direction: row;
        gap: 1rem;
    }

    /* ================================
       Dropdown Section
       ================================ */
    .FilterSelection {
        display: flex;
        gap: 0.25rem;
        align-items: center;
        flex-direction: column;
    }

    .DropdownSelectors {
        display: flex;
        flex-direction: row;
        gap: 0.25rem;
    }

    /* ================================
       Paging Controls Section
       ================================ */
    .paging-controls {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        flex: 1;
    }

    .paging-chevron {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        padding: 0;
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 0;
        color: #ffffff;
        background-color: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.15s ease;
        text-align: center;
    }

    .paging-chevron:hover {
        background-color: rgba(255, 255, 255, 0.25);
        transform: scale(1.05);
    }

    .paging-chevron:active {
        transform: scale(0.95);
    }

    .paging-title {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.125rem;
        font-size: 1rem;
        font-weight: 600;
        color: #ffffff;
        min-width: 120px;
        text-align: center;
    }

    /* ================================
       Details Section
       ================================ */
    .details {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        align-items: flex-end;
    }

    .detail-row {
        display: flex;
        gap: 0.5rem;
        font-size: 0.75rem;
        line-height: 1.2;
    }

    .detail-label {
        opacity: 0.7;
        font-weight: 400;
    }

    .detail-value {
        font-weight: 600;
    }
</style>

