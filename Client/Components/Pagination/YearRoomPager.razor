@* Html markup for the year room pager *@
<div class="YearRoomPager">
    @* Dropdown selection section *@
    <div class="DropdownsSelection">
        <div class="dropdown-group">
            <label class="dropdown-label">Year</label>
            <select class="pager-dropdown" @bind="SelectedYear">
                @foreach (var year in MockYears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>
        <div class="dropdown-group">
            <label class="dropdown-label">Room</label>
            <select class="pager-dropdown" @bind="SelectedRoom">
                @foreach (var room in MockRooms)
                {
                    <option value="@room">@room</option>
                }
            </select>
        </div>
        <button class="pager-button">Select</button>
    </div>
    @* Paging controls section *@
    <div class="paging-controls">
        <button class="paging-chevron" @onclick="OnPreviousClicked" title="Previous">
            <i class="bi bi-chevron-left"></i>
        </button>
        <div class="paging-title">
            <span>@SelectedYear</span>
            <span>@SelectedRoom</span>
        </div>
        <button class="paging-chevron" @onclick="OnNextClicked" title="Next">
            <i class="bi bi-chevron-right"></i>
        </button>
    </div>
    @* Details section *@
    <div class="Details">
        Teacher Name
        Last updated
    </div>
</div>
